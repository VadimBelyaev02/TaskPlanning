<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2" author="Vadim Belyaev">
        
        <createTable tableName="rank">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="required_score" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <dropColumn tableName="users" columnName="score"/>

        <createTable tableName="statistics">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="completed" type="int"/>
            <column name="unfulfilled" type="int"/>
            <column name="overdue" type="int"/>
        </createTable>

    </changeSet>

</databaseChangeLog>