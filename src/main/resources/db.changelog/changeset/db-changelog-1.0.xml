<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="Vadim Belyaev">

        <createTable tableName="users">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="score" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="confirmations">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="code" type="varchar(8)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints references="users" foreignKeyName="confirmations_users_id_fkey"/>
            </column>
        </createTable>

        <createTable tableName="tasks">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="topic" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(1024)"/>
            <column name="user_id" type="uuid">
                <constraints references="users(id)" foreignKeyName="tasks_users_id_fkey"/>
            </column>
            <column name="score" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>